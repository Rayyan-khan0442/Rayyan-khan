#include <iostream>
#include <vector>
#include <string>
using namespace std;

struct Employee {
    string name;
    int age;
    vector<string> skills;
};

vector<Employee> getEmployees() {
    vector<Employee> list;
    char addMore = 'y';

    while (addMore == 'y') {
        Employee e;
        cin.ignore();
        cout << "Enter employee name: ";
        getline(cin, e.name);

        cout << "Enter age: ";
        cin >> e.age;

        cout << "Enter skills (type 'done' to stop): ";
        string skill;
        while (true) {
            cin >> skill;
            if (skill == "done") break;
            e.skills.push_back(skill);
        }

        list.push_back(e);

        cout << "Add another employee? (y/n): ";
        cin >> addMore;
    }

    return list;
}

void showEmployees(const vector<Employee>& list) {
    for (int i = 0; i < list.size(); i++) {
        cout << "Name: " << list[i].name << "\n";
        cout << "Age: " << list[i].age << "\n";
        cout << "Skills: ";
        for (int j = 0; j < list[i].skills.size(); j++)
            cout << list[i].skills[j] << " ";
        cout << "\n----------------\n";
    }
}

int main() {
    vector<Employee> employees = getEmployees();
    showEmployees(employees);
    return 0;
}
