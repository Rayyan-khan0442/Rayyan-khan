#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter matrix size: ";
    cin >> n;

    int mat[n][n];
    cout << "Enter matrix elements:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            cin >> mat[i][j];

    cout << "Matrix in snake pattern:\n";
    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) {
            for (int j = 0; j < n; j++)
                cout << mat[i][j] << " ";
        } else {
            for (int j = n - 1; j >= 0; j--)
                cout << mat[i][j] << " ";
        }
    }
    cout << endl;

    return 0;
}
